# ACL resource for the General inbox
@prefix acl: <http://www.w3.org/ns/auth/acl#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.

# The General inbox is append only to the public
<#public>
    a acl:Authorization;
    acl:agentClass foaf:Agent;
    acl:accessTo <./>;
    acl:mode acl:Append.

# The owner has full access to the inbox
<#owner>
    a acl:Authorization;
    acl:agent <{{webId}}>;
    acl:accessTo <./>;
    acl:mode acl:Read, acl:Write, acl:Control.